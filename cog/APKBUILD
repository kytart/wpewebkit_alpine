# Maintainer: signageOS <dev@signageos.io>
pkgname="cog"
pkgver="0.2.0"
pkgrel=0
pkgdesc="cog"
url="https://github.com/Igalia/cog"
arch="armhf armv7"
license="custom"
depends="wpewebkit"
makedepends="cmake libwpe"
options="!check"
source="
    https://github.com/Igalia/cog/releases/download/v$pkgver/cog-$pkgver.tar.xz
"
builddir="$srcdir"/$pkgname-$pkgver

build() {
    cd "$builddir"
    cmake -DCOG_PLATFORM_FDO=OFF .
    make
}

package() {
    cd "$builddir"
    make DESTDIR="$pkgdir" install
    mv "$pkgdir"/usr/local/* "$pkgdir"/usr
    rmdir "$pkgdir"/usr/local
}

