# Maintainer: signageOS <dev@signageos.io>
pkgname="cog"
pkgver="0.3.91"
pkgrel=0
pkgdesc="cog"
url="https://github.com/Igalia/cog"
arch="armhf armv7"
license="custom"
depends="wpewebkit libwpe wpebackend-fdo glib"
makedepends="glib-dev cmake libsoup-dev wayland-dev wayland-libs-egl wayland-protocols mesa-dev"
options="!check"
_commitid="1f60cc164cc9fadfff42298a56a28c2808e7550f"
source="
    $pkgname-$pkgver.tar.gz::https://github.com/Igalia/cog/archive/$_commitid.tar.gz
    cmake.patch
"
builddir="$srcdir"/$pkgname-$_commitid

build() {
    cd "$builddir"
    cmake . && make
}

package() {
    cd "$builddir"
    make DESTDIR="$pkgdir" install
    mv "$pkgdir"/usr/local/* "$pkgdir"/usr
    rmdir "$pkgdir"/usr/local
}

